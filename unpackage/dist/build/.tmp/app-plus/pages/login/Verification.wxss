
.verification-page {
	width: 100%;
	padding: 10px;
	box-sizing: border-box;
	background-color: #FFFFFF;
}
.title {
	width: 100%;
	padding: 10px;
	box-sizing: border-box;
}
.title text {
	display: block;
	text-align: center;
	line-height: 1.5;
	font-size: 1rem;
	font-weight: 700;
}
.login-text {
	margin-top: 10px;
	height: 30px;
	width: 100%;
	font-size: 16px;
	text-align: center;
	line-height: 1.5;
}
.bg {
	background-repeat: no-repeat;
	background-size: 100% 35%;
	background-position: top;
	width: 100%;
	height: 80%;
}
.box {
	width: 100%;
	height: 200px;
}
.move {
	width: 50px;
	height: 50px;
	z-index: 10;
}
image {
	width: 50px;
	height: 50px;
}

