
.base {
	width: 100%;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	background-color: #FFFFFF;
	padding: 10px;
}
.map-wrapp {
	width: 306px;
	height: 186px;
	margin: 20px auto;
	position: relative;
	background-repeat: no-repeat;
}
.fly {
	width: 20px;
	height: 20px;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	    -ms-flex-pack: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	position: absolute;
}
.fly image {
	width: 10px;
	height: 10px;
}
.fly::after {
	content: "";
	width: 18px;
	height: 18px;
	border: 1px solid #007AFF;
	border-radius: 50%;
	position: absolute;
	top: 0;
	right: 0;
	bottom: 0;
	left: 0;
	margin: auto;
	-webkit-animation: warn 4s linear infinite;
}
.fly::before {
	content: "";
	width: 12px;
	height: 12px;
	border: 1px solid #007AFF;
	border-radius: 50%;
	position: absolute;
	top: 0;
	right: 0;
	bottom: 0;
	left: 0;
	margin: auto;
	-webkit-animation: warn 4s linear infinite;
}
.base-content {
	width: 100%;
	padding: 10px;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	margin-top: 70px;
	font-size: 14px;
	line-height: 1.5;
}
.title {
	margin: 10px auto;
	color: rgba(0, 0, 0, 1);
	line-height: 20px;
}
.constant-text {
	width: 100%;
	margin: auto;
}
.ash {
	color: #9B9B9B;
}
.bottom text .blue {
	color: #4A90E2;
	display: inline-block;
}
.bottom {
	margin-top: 70px;
}
.bottom text {
	display: block;
	font-size: 14px;
}
@-webkit-keyframes warn {
0% {
		-webkit-transform: scale(0.5);
		        transform: scale(0.5);
		opacity: 0;
}
25% {
		-webkit-transform: scale(0.8);
		        transform: scale(0.8);
		opacity: 0.3;
}
50% {
		-webkit-transform: scale(1.0);
		        transform: scale(1.0);
		opacity: 0.5;
}
75% {
		-webkit-transform: scale(1.3);
		        transform: scale(1.3);
		opacity: 0.8;
}
100% {
		-webkit-transform: scale(1.5);
		        transform: scale(1.5);
		opacity: 0;
}
}
@keyframes warn {
0% {
		-webkit-transform: scale(0.5);
		        transform: scale(0.5);
		opacity: 0;
}
25% {
		-webkit-transform: scale(0.8);
		        transform: scale(0.8);
		opacity: 0.3;
}
50% {
		-webkit-transform: scale(1.0);
		        transform: scale(1.0);
		opacity: 0.5;
}
75% {
		-webkit-transform: scale(1.3);
		        transform: scale(1.3);
		opacity: 0.8;
}
100% {
		-webkit-transform: scale(1.5);
		        transform: scale(1.5);
		opacity: 0;
}
}

